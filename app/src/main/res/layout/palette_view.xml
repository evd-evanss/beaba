<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/horizontal_margin"
    android:paddingBottom="@dimen/vertical_margin"
    android:background="@drawable/bg_pallete">

    <TextView
        android:id="@+id/title_color_picker"
        style="@style/Big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/vertical_margin"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Selecione a cor" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/title_color_picker"
        app:layout_constraintStart_toStartOf="@+id/title_color_picker"
        app:layout_constraintTop_toBottomOf="@+id/title_color_picker">

        <ImageView
            android:id="@+id/image_color_white"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:paddingStart="12dp"
            android:paddingTop="16dp"
            android:paddingEnd="12dp"
            android:paddingBottom="16dp"
            android:src="@drawable/circle_white" />

        <ImageView
            android:id="@+id/image_color_black"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:paddingStart="12dp"
            android:paddingTop="16dp"
            android:paddingEnd="12dp"
            android:paddingBottom="16dp"
            android:src="@drawable/circle_black" />

        <ImageView
            android:id="@+id/image_color_red"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:paddingStart="12dp"
            android:paddingTop="16dp"
            android:paddingEnd="12dp"
            android:paddingBottom="16dp"
            android:src="@drawable/circle_red" />

        <ImageView
            android:id="@+id/image_color_yellow"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:paddingStart="12dp"
            android:paddingTop="16dp"
            android:paddingEnd="12dp"
            android:paddingBottom="16dp"
            android:src="@drawable/circle_yellow" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageView
            android:id="@+id/image_color_green"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:paddingStart="12dp"
            android:paddingTop="16dp"
            android:paddingEnd="12dp"
            android:paddingBottom="16dp"
            android:src="@drawable/circle_green" />

        <ImageView
            android:id="@+id/image_color_blue"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:paddingStart="12dp"
            android:paddingTop="16dp"
            android:paddingEnd="12dp"
            android:paddingBottom="16dp"
            android:src="@drawable/circle_blue" />

        <ImageView
            android:id="@+id/image_color_pink"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:paddingStart="12dp"
            android:paddingTop="16dp"
            android:paddingEnd="12dp"
            android:paddingBottom="16dp"
            android:src="@drawable/circle_pink" />

        <ImageView
            android:id="@+id/image_color_brown"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:paddingStart="12dp"
            android:paddingTop="16dp"
            android:paddingEnd="12dp"
            android:paddingBottom="16dp"
            android:src="@drawable/circle_brown" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/widgetPaintPencilSeekBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:progress="5"
        android:visibility="visible"
        android:layout_marginHorizontal="@dimen/horizontal_margin_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>